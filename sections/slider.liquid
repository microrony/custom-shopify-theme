{% schema %}
{
	"name": "Image Slider",
	"tag": "section",
	"class": "slider",
	"settings": [
	{
		"type": "checkbox",
  "id": "autoplay",
  "label": "Autoplay",
  "default": false
	},
	{
		"type": "range",
  "id": "autoplay_speed",
  "label": "Autoplay Speed",
	"min": 0,
  "max": 12,
  "step": 1,
	"unit": "%",
  "default": 2
	},
	{
		"type": "range",
  "id": "transition_speed",
  "label": "Transition Speed",
	"min": 0,
  "max": 12,
  "step": 1,
  "default": 2
	},
	{
		"type": "select",
		"id": "height",
		"label": "Height",
		"options": [
			{
				"value": "full",
				"label": "Full"
			},
			{
				"value": "medium",
				"label": "Medium"
			},
			{
				"value": "small",
				"label": "Small"
			}
		],
		"default": "medium"
	}
	
	],
	"blocks": [
	{
		"name": "Slide",
		"type": "slide",
		"settings": [
		{
			"type": "header",
			"content": "Image"
		},
		{
			"type": "image_picker",
			"label": "Image",
			"id": "image"
		},
		{
			"type": "range",
			"id": "overlay_opacity",
			"min": 0,
			"max": 100,
			"step": 1,
			"unit": "%",
			"label": "Overlay Opacity",
			"default": 16
		},
		{
			"type": "header",
			"content": "Text"
		},
		{
			"type": "text",
			"label": "Heading",
			"id": "heading"
		},
		{
			"type": "text",
			"label": "Description",
			"id": "description"
		},
		{
			"type": "header",
			"content": "Button"
		},
		{
			"type": "text",
			"label": "Button text",
			"id": "button_text"
		},
		{
			"type": "url",
			"label": "Button link",
			"id": "button_link"
		}
		]
	}
	],
	"presets": [
	{
		"name": "Image Slider",
		"settings": {}
	}
  ]
}
{% endschema %}